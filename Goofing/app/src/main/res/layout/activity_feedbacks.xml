<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="davideberdin.goofing.FeedbacksActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pronunciationTextView"
            android:id="@+id/pronunciationTextView"
            android:textColor="#e61818"
            android:textAlignment="center"
            android:textStyle="bold" />

        <davideberdin.goofing.utilities.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/feedbacksNativePhonemes"
            android:textAlignment="center"
            android:text="test" />

        <davideberdin.goofing.utilities.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/feedbacksUserPhonemes"
            android:textAlignment="center"
            android:text="test" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stressTextView"
            android:id="@+id/stressTextView"
            android:textAlignment="center"
            android:textColor="#e61818"
            android:textStyle="bold"
            android:singleLine="false"
            android:phoneNumber="false"
            android:password="false" />

        <davideberdin.goofing.utilities.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/feedbacksNativeStress"
            android:textAlignment="center"
            android:text="test" />

        <davideberdin.goofing.utilities.AutoResizeTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/feedbacksUserStress"
            android:textAlignment="center"
            android:text="test" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="30dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/vowelChartImageView"
            android:contentDescription="@string/vowelChartImageView"
            android:cropToPadding="false"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>
