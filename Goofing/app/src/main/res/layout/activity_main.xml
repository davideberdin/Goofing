<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/insert_name_textField"
        android:ems="10"
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|right|bottom|center|top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/regionalTextView"
        android:id="@+id/regionTextView"
        android:layout_marginTop="23dp"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regional_area_spinner"
        android:spinnerMode="dropdown"
        android:entries="@array/reagional_area"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_below="@+id/regionTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nationality_textView"
        android:id="@+id/nationalityTextView"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_below="@+id/regional_area_spinner"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nationality_spinner"
        android:entries="@array/nationality"
        android:spinnerMode="dropdown"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_below="@+id/nationalityTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_occupation_textView"
        android:id="@+id/occupationTextView"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_below="@+id/nationality_spinner"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/occupation_spinner"
        android:entries="@array/occupation"
        android:spinnerMode="dropdown"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_below="@+id/occupationTextView"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_user_buttonName"
        android:id="@+id/create_user_button"
        android:layout_gravity="left|right|bottom|center|top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:onClick="createUser"/>

</RelativeLayout>
