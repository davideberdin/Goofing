<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tpMainLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tpSentence"
            android:id="@+id/tpSentence"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waveFormLayout"/>

        <android.support.design.widget.FloatingActionButton android:id="@+id/fabStartRecording"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_gravity="end|bottom" android:layout_margin="@dimen/fab_margin"
            android:src="@android:drawable/ic_btn_speak_now"
            android:onClick="onClick" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tpPhonetic"
            android:id="@+id/tpPhoneticSentence"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>