<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tpMainLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tpSentence"
            android:id="@+id/tpSentence"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <SurfaceView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/waveformView"
            android:layout_weight="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tpStartButton"
            android:id="@+id/tpStartButton"
            android:layout_weight="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tpStopButton"
            android:text="@string/tpStopButton" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tpPhonetic"
            android:id="@+id/tpPhoneticSentence"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>